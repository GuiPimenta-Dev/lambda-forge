[
    {
        "name": "Start",
        "path": "./functions/web_scraper/start",
        "description": "handle start command",
        "timeout": 60,
        "triggers": [
            {
                "service": "api_gateway",
                "trigger": "/start",
                "method": "POST",
                "public": true
            }
        ],
        "invocations": [
            {
                "service": "sqs",
                "resource": "crawler_queue"
            }
        ]
    },
    {
        "name": "Crawler",
        "path": "./functions/web_scraper/crawler",
        "description": "crawl the websites",
        "timeout": 60,
        "triggers": [
            {
                "service": "sqs",
                "trigger": "crawler_queue"
            }
        ],
        "invocations": [
            {
                "service": "sqs",
                "resource": "crawler_queue"
            },
            {
                "service": "dynamodb",
                "resource": "visited_urls_table"
            }
        ]
    },
    {
        "name": "Bot",
        "path": "./functions/telegram/bot",
        "description": "telegram bot",
        "timeout": 60,
        "triggers": [
            {
                "service": "api_gateway",
                "trigger": "/webhook",
                "method": "POST",
                "public": true
            }
        ],
        "invocations": []
    }
]